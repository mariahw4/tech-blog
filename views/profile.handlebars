<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Post:</h3>

    <form class='form new-post-form'>
      <div class='form-group'>
        <label for='post-name'>post name:</label>
        <input class='form-input' type='text' id='post-name' name='post-name' />
      </div>
      <div class='form-group'>
        <label for='post-content'> content:</label>
        <textarea
          class='form-input'
          type='text'
          id='post-content'
          name='post-content'
        ></textarea>
      </div>
      {{!-- <div class='form-group'>
        <label for='postUserName'>Username:</label>
        <p class='form-input' id='postUserName' name='postUserName'>{{name}}</p>
      </div> --}}
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class='col-md-6 post-list'>
      <h3>Current posts:</h3>

      {{#each posts as |post|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/post/{{post.id}}'>{{post.name}}</a></h4>

            <!-- Edit form hidden by default -->
            <form
              class='edit-post-form'
              data-id='{{post.id}}'
              style='display:none;'
            >
              <input
                class='form-input'
                type='text'
                value='{{post.name}}'
                name='post-name-edit'
              />
              <textarea
                class='form-input'
                name='post-content-edit'
              >{{post.post_content}}</textarea>
              
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-warning btn-edit'
              data-id='{{project.id}}'
            >EDIT</button>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{post.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>