<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech-Blog</title>
    {{! <link rel='stylesheet' href='/css/jass.css' /> }}
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header
        class='display-flex justify-space-between align-center p-2 header' style="color: #ef3e36;"
      >
        <h1 class='nav-item'>
          <a class='nav-link' href='/'>Techblog</a>
        </h1>
        <nav style="color: #17BEBB;" class='nav'>
          <a style="color: #17BEBB;" class='nav-link' href='/'>Home</a>
          |
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a style="color: #17BEBB;" class='nav-link' href='/profile'>Dashboard</a>
            |
            <button type="button" style="color: #17BEBB;" class='btn btn-link' id='logout'>Logout</button>
          {{else}}
            <a class='nav-link' href='/login'>Login</a>
          {{/if}}
        </nav>
      </header>

      <!-- Always render the main content -->
      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
    </div>
  </body>

  {{#if logged_in}}
    <script src='/js/logout.js'></script>
  {{/if}}

</html>